<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Pierwszy przepis -->
        <TextView
            android:id="@+id/recipe_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Title 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:id="@+id/recipe_description_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Description 1"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/recipe_image_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_fastfood_24"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:padding="8dp" />

        <!-- Drugi przepis -->
        <TextView
            android:id="@+id/recipe_title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Title 2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:id="@+id/recipe_description_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Description 2"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/recipe_image_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_fastfood_24"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>
